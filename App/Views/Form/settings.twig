{% include "Macros/notification.twig" %}
<h2>{{ lang.getTranslation("infoUser") }}</h2>
<form method="post" action="/settings">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control" value="{{ user.getUsername() }}"
                           type="text" name="username" required>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    </div>
                    <input class="form-control" value="{{ user.getEmail() }}"
                           type="email" name="email" required>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <input class="form-control" id="password"
                           placeholder="{{ lang.getTranslation(["your","password"])|capitalize }}" type="password"
                           name="password">
                    <div class="input-group-append">
                        <span class="input-group-text" id="iconPassword"
                              onClick="togglePassword('password','iconPassword')"><i class="fas fa-eye"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <input class="form-control" id="confirmPassword"
                           placeholder="{{ lang.getTranslation("confirmPassword")|capitalize }}" type="password"
                           name="password_confirmation">
                    <div class="input-group-append">
                        <span class="input-group-text" id="iconPasswordConfirm"
                              onClick="togglePassword('confirmPassword','iconPasswordConfirm')"><i
                                    class="fas fa-eye"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-icon btn-success">
                <span class="btn-inner--icon"><i class="ni ni-send"></i></span>
                <span class="btn-inner--text">{{ lang.getTranslation("update")|capitalize }}</span>
            </button>
        </div>
    </div>
</form>
<div class="dropdown-divider"></div>
<h2>{{ lang.getTranslation("language")|capitalize }}</h2>
<form method="post" action="/settings/lang">
    <div class="row">
        <div class="col-md-6">
            <select class="form-control" name="lang">
                <option value="en" {{ (lang.getTranslation("lang") == "en") ? "selected" }}>English</option>
                <option value="fr" {{ (lang.getTranslation("lang") == "fr") ? "selected" }}>Fran√ßais</option>
            </select>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-icon btn-secondary">
                <span class="btn-inner--icon"><i class="ni ni-send"></i></span>
                <span class="btn-inner--text">{{ lang.getTranslation("update")|capitalize }}</span>
            </button>
        </div>
    </div>
</form>