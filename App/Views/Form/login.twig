{% include "Macros/notification.twig" %}
<form method="post" action="/login">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control"
                           placeholder="{{ lang.getTranslation(["username", "or", "email"])|capitalize }}" type="text"
                            {% if(_post.login is defined) %} value="{{ _post.login }}" {% endif %} name="login" required>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <div class="input-group input-group-merge">
                    <input class="form-control" id="password"
                           placeholder="{{ lang.getTranslation(["your", "password"])|capitalize }}" type="password"
                           name="password" required>
                    <div class="input-group-append">
                        <span class="input-group-text" id="iconPassword"
                              onClick="togglePassword('password','iconPassword')"><i class="fas fa-eye"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input type="submit" class="btn btn-success" value="{{ lang.getTranslation("login")|capitalize }}">
        </div>
    </div>
</form>